<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_margin="8dp"
    tools:context=".MainActivity"
    android:id="@+id/card_view"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ingredient_image"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="6dp"
            app:srcCompat="@drawable/banana" />

        <TextView
            android:id="@+id/ingredient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:text="Banana"
            android:textSize="24sp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/bought"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@+id/ingredient_image"
            android:text="Bought"
            android:textSize="10sp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/bought_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@+id/bought"
            android:text="x days ago"
            android:textSize="10sp"
            tools:ignore="RtlSymmetry" />


        <TextView
            android:id="@+id/best_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@+id/bought_time"
            android:text="Best Before"
            android:textSize="10sp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/best_before_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@+id/best_before"
            android:text="mm/dd/yyyy"
            android:textSize="10sp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="70dp"
            android:layout_toEndOf="@+id/ingredient_image"
            android:text="Amount"
            android:textSize="10sp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/amount_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="70dp"
            android:layout_toEndOf="@+id/amount"
            android:text="x kg"
            android:textSize="10sp"
            tools:ignore="RtlSymmetry" />

        <ImageButton
            android:id="@+id/snow_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:paddingEnd="20dp"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/ic_snow"
            android:background="#00FFFFFF"
            />

        <ImageButton
            android:id="@+id/warning_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/snow_icon"
            android:layout_alignParentEnd="true"
            android:background="#00FFFFFF"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            app:srcCompat="@drawable/ic_warning" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>